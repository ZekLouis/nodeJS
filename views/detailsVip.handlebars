<h2>Détails d'un VIP</h2>
{{> selectLettres}}
{{#if vip}}


  <img src="/images/vip/{{vip.photo_adresse}}">
  <p><b>Nom : </b>{{vip.vip_nom}} {{vip.vip_prenom}}</p>
  <p><b>Date de naissance : </b>{{formatDate vip.vip_naissance 'DD MMMM YYYY' }}</p>
  <p><b>Nationalité : </b> {{vip.nationalite_nom}}</p>

  {{#if acteur}}
    <p><b>Profession : </b>
    {{#ifCond  vip.vip_sexe '==' 'M'}}
        Acteur
    {{else}}
        Actrice
    {{/ifCond}}</p>

    <b>Principal(aux) film(s) : </b>

    {{#each acteur}}
        <p>{{this.film_titre}} ({{formatDate this.film_daterealisation 'MMMM YYYY'}}) de

        <a class="popup" href="/repertoire/detailsVip/{{this.vip_numero}}">
            {{this.vip_prenom}} {{this.vip_nom}}
            <span><img src="/images/vip/{{this.photo_adresse}}"><b>{{this.vip_prenom}} {{this.vip_nom}}</b> {{this.vip_texte}}...</span>
        </a>

        </p>
    {{/each}}
  {{/if}}


  {{#if chanteur}}
    <p><b>Profession : </b>
    {{#ifCond  vip.vip_sexe '==' 'M'}}
        Chanteur
    {{else}}
        Chanteuse
    {{/ifCond}}</p>

    <b>Principal(aux) album(s) : </b>

    {{#each chanteur}}
        <p>
            {{this.album_titre}} ({{formatDate this.album_date 'MMMM YYYY'}}) {{this.maisondisque_nom}}
        </p>
    {{/each}}

  {{/if}}


  {{#if mannequin}}
    <p><b>Profession : </b>Mannequin</p>

    <b>Principal(aux) défilé(s) : </b>

    {{#each mannequin}}
        <p>{{this.defile_lieu}} ({{formatDate this.defile_date 'MMMM YYYY'}}) de

        <a class="popup" href="/repertoire/detailsVip/{{this.vip_numero}}">
            {{this.vip_prenom}} {{this.vip_nom}}
            <span><img src="/images/vip/{{this.photo_adresse}}"><b>{{this.vip_prenom}} {{this.vip_nom}}</b> {{this.vip_texte}}...</span>
        </a>

        </p>
    {{/each}}

  {{/if}}


  {{#if realisateur}}
    <p><b>Profession : </b>
    {{#ifCond  vip.vip_sexe '==' 'M'}}
        Réalisateur
    {{else}}
        Réalisatrice
    {{/ifCond}}</p>

    <b>Principal(aux) film(s) : </b>

    {{#each realisateur}}
        <p>{{this.film_titre}} ({{formatDate this.film_daterealisation 'MMMM YYYY'}})</p>
    {{/each}}

  {{/if}}


  {{#if couturier}}
    <p><b>Profession : </b>
    {{#ifCond  vip.vip_sexe '==' 'M'}}
        Couturier
    {{else}}
        Couturière
    {{/ifCond}}</p>

    <b>Principal(aux) défilé(s) : </b>

    {{#each couturier}}
        <p>{{this.defile_lieu}} ({{formatDate this.defile_date 'MMMM YYYY'}})</p>
    {{/each}}

  {{/if}}


  {{#each mariages}}
    <p><b>Mariage(s) : </b>

    <a class="popup" href="/repertoire/detailsVip/{{this.vip_numero}}">
        {{this.vip_prenom}} {{this.vip_nom}}
        <span><img src="/images/vip/{{this.photo_adresse}}"><b>{{this.vip_prenom}} {{this.vip_nom}}</b> {{this.vip_texte}}...</span>
    </a>

    ({{formatDate this.date_evenement 'MMMM YYYY' }} => {{formatDate this.mariage_fin 'MMMM YYYY' }}) <b>Lieu : </b> {{this.mariage_lieu}}</p>
  {{/each}}


  {{#each liaisons}}
    <p><b>Liaisons(s) : </b>
        <a class="popup" href="/repertoire/detailsVip/{{this.vip_numero}}">
            {{this.vip_prenom}} {{this.vip_nom}}
            <span><img src="/images/vip/{{this.photo_adresse}}"><b>{{this.vip_prenom}} {{this.vip_nom}}</b> {{this.vip_texte}}...</span>
        </a>
        ({{formatDate this.date_evenement 'MMMM YYYY' }})
        <b>Raison de fin de liaison : </b>{{this.liaison_motiffin}}</p>


  {{/each}}

  <p><b>Qui suis-je ? : </b>{{vip.vip_texte}}</p>

  {{#each photos}}
    <a href="/images/vip/{{this.photo_adresse}}" data-lightbox="image-1" data-title="{{this.photo_sujet}} - {{this.photo_commentaire}}"><img class="personne" src="/images/vip/{{this.photo_adresse}}"></a>
  {{/each}}

{{else}}
  <p>Pas de VIP</p>
{{/if}}
